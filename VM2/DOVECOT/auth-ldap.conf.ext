# LDAP connection
ldap_uris = ldap://192.168.1.111
ldap_auth_dn = cn=admin,dc=seadra,dc=com
ldap_auth_dn_password = garcia
ldap_base = dc=seadra,dc=com

passdb ldap {
  ldap_filter = (&(objectClass=inetOrgPerson)(|(cn=%{user})(mail=%{user})))
  ldap_bind = no

  fields {
    user = %{ldap:cn}
    password = %{ldap:userPassword}
  }
}

userdb static {
  fields {
    uid = vmail
    gid = vmail
    home = /var/mail/vhosts/seadra.com/%{user}/Maildir/
  }
}